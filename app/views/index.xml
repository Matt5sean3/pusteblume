<Alloy>
    <Window zIndex="10">
        <View id="background" />


        <View id="content"></View>
        <View id="view_post">
            <View id="view_linie"></View>
            <Button id="btn_aspect">Aspect</Button>
            <TextArea id="text"></TextArea>
            <Button id="btn_submit" titleid="post"></Button>
            <Button id="btn_photo" titleid="photo"></Button>
        </View>
        <View id="view_aspects"></View>
        <!-- stream / activity menu -->
        <View id="view_menu_background" />
        <View id="view_menu_stream">
            <View id="view_me">
                <ImageView id="img_me"></ImageView>
                <Label id="lbl_me"></Label>
            </View>
            <ScrollView id="view_options">
                <Label id="lbl_option1" optionID="0" class="lbl_button" textid="txt_stream"></Label>
                <Label id="lbl_option2" optionID="1" class="lbl_button" textid="txt_activity"></Label>
                <Label id="lbl_option3" optionID="2" class="lbl_button" textid="txt_mentions"></Label>
                <Label id="lbl_option4" optionID="3" class="lbl_button" textid="txt_followedtags"></Label>
                <Label id="btn_settings" class="lbl_button" textid="txt_settings"></Label>


            </ScrollView>
            <Label id="lbl_invite" class="lbl_button" textid="txt_invite"></Label>
        </View>
        <!-- menu -->
        <View class="menu">
            <View id="view_stream">
                <View id="view_square1" />
                <View id="view_square2" />
                <View id="view_square3" />
                <Label id="lbl_stream">Stream</Label>
            </View>
            <Button id="btn_write"></Button>
            <Button id="btn_refresh"></Button>
            <Button id="btn_logout"></Button>
        </View>

        <!-- loading -->
        <View id="view_loading">
            <ActivityIndicator id="waiting"></ActivityIndicator>
        </View>
        <!-- photo overlay-->
        <View id="view_photo">
            <View id="view_bg"></View>
            <Label>loading</Label>
            <View id="scroller_images"></View>
            <Button id="btn_close">x</Button>
        </View>
    </Window>
</Alloy>
